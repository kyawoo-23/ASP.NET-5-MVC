@model List<Skill>
@{
    ViewData["Title"] = "Index";
}

<partial name="_AddSkillFormPartialView" model="new Skill()" />

<hr />

<div class="row align-items-center">
    <h3 class="pl-3">Skills List</h3>
</div>

<div class="row mt-3">
    @foreach (Skill skill in Model)
    {
        <div class="col-3 mb-4">
            <div class="bg-dark rounded d-flex justify-content-between align-items-center">
                <a class="text-white text-capitalize pl-3 w-100" asp-action="Details" asp-route-id="@skill.SkillId">@skill.SkillName</a>
                <div class="btn-group">
                    <button class="btn btn-dark rounded-0"><i class="bi bi-pencil-square"></i></button>
                    <button type="button" class="btn btn-danger skillConfirmDelete" data-toggle="modal" data-target="#confirmDeleteModal" data-assigned-id=@skill.SkillId>
                        <i class="bi bi-trash-fill"></i>
                    </button>
                </div>
            </div>
        </div>
    }
</div>