@model Developer

<div class="col-12 col-md-6 col-lg-4 mb-3">
    <div class="card border-info">
        <a class="text-decoration-none text-secondary" asp-action="Details" asp-route-id="@Model.Id">
            <div class="card-body">
                <h5 class="card-title">@Model.Name</h5>
                <p class="card-text">Gender: @Model.Gender</p>
                <p class="card-text">Type: @Model.Type</p>
            </div>
        </a>
        <div class="card-footer d-flex justify-content-end">
            <a class="btn btn-info mr-2" asp-action="Edit" asp-controller="Developer" asp-route-id="@Model.Id">Edit</a>
            <button type="button" class="btn btn-outline-danger" data-toggle="modal" data-target="#@("modal" + Model.Id)">
                Delete
            </button>
            @{
                ViewData["Question"] = $"Are you sure you want to delete {Model.Name}?";
            }
            <partial name="_CustomModal" view-data="ViewData" />
        </div>
    </div>
</div>