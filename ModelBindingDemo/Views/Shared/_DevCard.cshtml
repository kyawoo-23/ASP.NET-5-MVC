@model Developer

<div class="col-12 col-md-6 col-lg-4 mb-3">
    <div class="card border-secondary">
        <a class="text-decoration-none text-secondary" asp-action="Details" asp-route-id="@Model.DeveloperId">
            <div class="card-header">
                <h5 class="card-title mt-2"><i class="bi bi-person-fill mr-2"></i>@Model.Name</h5>
            </div>
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <p class="card-text">Gender: @Model.Gender</p>
                    <p class="card-text">
                        <i class="bi bi-code"></i>
                            @Model.Type
                        <i class="bi bi-code-slash"></i>
                    </p>
                </div>
            </div>
        </a>
        <div class="card-footer d-flex justify-content-end">
            <a class="btn btn-dark mr-2" asp-action="Edit" asp-controller="Developer" asp-route-id="@Model.DeveloperId">Edit</a>
            <button type="button" class="btn btn-outline-danger devConfirmDelete" data-toggle="modal" data-target="#confirmDeleteModal" data-assigned-id=@Model.DeveloperId>
                Delete
            </button>
        </div>
    </div>
</div>