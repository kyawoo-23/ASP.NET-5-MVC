@model ModelBindingDemo.ViewModel.DeveloperNoteViewModel
@{
    ViewData["Title"] = "Create";
}

<h3 class="text-center">Create a new Note</h3>

<form class="mt-4 w-75 mx-auto" method="post" asp-controller="Note" asp-action="Create">
    <div class="row mb-3">
        <label for="name" class="col-sm-2 col-form-label">Select Dev</label>
        <div class="col-sm-10">
        <select class="form-control" asp-for="Note.DeveloperId">
            <option selected>Choose a developer...</option>
            @foreach(Developer dev in Model.Developer){
                <option value=@dev.Id>@dev.Name</option>
            }
            </select>
        </div>
    </div>
    <div class="row mb-3">
        <label for="name" class="col-sm-2 col-form-label">Date Time</label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="Note.CreatedAt">
            <span asp-validation-for="Note.CreatedAt" class="text-danger d-flex justify-content-end"></span>
        </div>
    </div>
    <div class="row mb-3">
        <label for="name" class="col-sm-2 col-form-label">Title</label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="Note.Title">
            <span asp-validation-for="Note.Title" class="text-danger d-flex justify-content-end"></span>
        </div>
    </div>
    <div class="row mb-3">
        <label for="type" class="col-sm-2 col-form-label">Content</label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="Note.Content">
            <span asp-validation-for="Note.Content" class="text-danger d-flex justify-content-end"></span>
        </div>
    </div>
    <div class="d-flex justify-content-end">
        <button type="submit" class="btn btn-primary">Create</button>
    </div>
</form>

