@model Note
@{
    ViewData["Title"] = "Edit";
}

<h3 class="text-center">Edit Note</h3>

<form class="mt-4 w-75 mx-auto" method="post" asp-controller="Note" asp-action="Edit">

    <input class="form-control" hidden asp-for="DeveloperId">

    <div class="row mb-3">
        <label for="name" class="col-sm-2 col-form-label">Date Time</label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="CreatedAt">
            <span asp-validation-for="CreatedAt" class="text-danger d-flex justify-content-end"></span>
        </div>
    </div>
    <div class="row mb-3">
        <label for="name" class="col-sm-2 col-form-label">Title</label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="Title">
            <span asp-validation-for="Title" class="text-danger d-flex justify-content-end"></span>
        </div>
    </div>
    <div class="row mb-3">
        <label for="type" class="col-sm-2 col-form-label">Content</label>
        <div class="col-sm-10">
            <textarea rows="6" class="form-control" asp-for="Content"></textarea>
            <span asp-validation-for="Content" class="text-danger d-flex justify-content-end"></span>
        </div>
    </div>
    <div class="d-flex justify-content-end">
        <button type="submit" class="btn btn-primary">Update</button>
    </div>
</form>

